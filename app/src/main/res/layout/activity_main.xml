<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg0"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="@dimen/main_page_left_side"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/main_page_left_side"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/login_imageButton0"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bienvenue" />

            <Button
                android:id="@+id/login_buttoncon"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/configbtn"
                android:gravity="center"
                android:onClick="onConfigButtonClick" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/main_page_left_side"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/main_page_margin_bottom"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/main_page_left_side"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/login_imageButton2"
                    android:layout_width="@dimen/main_page_flag_diameter"
                    android:layout_height="@dimen/main_page_flag_diameter"
                    android:layout_margin="@dimen/main_page_flag_margin"
                    android:background="@drawable/chinese" />

                <ImageButton
                    android:id="@+id/login_imageButton1"
                    android:layout_width="@dimen/main_page_flag_diameter"
                    android:layout_height="@dimen/main_page_flag_diameter"
                    android:layout_margin="@dimen/main_page_flag_margin"
                    android:background="@drawable/english" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/main_page_left_side"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/login_imageButton4"
                    android:layout_width="@dimen/main_page_flag_diameter"
                    android:layout_height="@dimen/main_page_flag_diameter"
                    android:layout_margin="@dimen/main_page_flag_margin"
                    android:background="@drawable/german" />

                <ImageButton
                    android:id="@+id/login_imageButton3"
                    android:layout_width="@dimen/main_page_flag_diameter"
                    android:layout_height="@dimen/main_page_flag_diameter"
                    android:layout_margin="@dimen/main_page_flag_margin"
                    android:background="@drawable/french" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom|center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/login_TextView1"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/code"
            android:gravity="center"
            android:text=""></TextView>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/main_page_flag_margin"
            android:layout_marginBottom="@dimen/main_page_margin_bottom">

            <TableRow
                android:id="@+id/login_tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/login_button7"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/_7hover"
                    android:onClick="onNumButtonClick"
                    android:tag="7" />

                <Button
                    android:id="@+id/login_button8"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/_8hover"
                    android:onClick="onNumButtonClick"
                    android:tag="8" />

                <Button
                    android:id="@+id/login_button9"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/_9hover"
                    android:onClick="onNumButtonClick"
                    android:tag="9" />
            </TableRow>

            <TableRow
                android:id="@+id/login_tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/login_button4"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/_4hover"
                    android:onClick="onNumButtonClick"
                    android:tag="4" />

                <Button
                    android:id="@+id/login_button5"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/_5hover"
                    android:onClick="onNumButtonClick"
                    android:tag="5" />

                <Button
                    android:id="@+id/login_button6"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/_6hover"
                    android:onClick="onNumButtonClick"
                    android:tag="6" />
            </TableRow>

            <TableRow
                android:id="@+id/login_tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/login_button1"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/_1hover"
                    android:onClick="onNumButtonClick"
                    android:tag="1" />

                <Button
                    android:id="@+id/login_button2"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/_2hover"
                    android:onClick="onNumButtonClick"
                    android:tag="2" />

                <Button
                    android:id="@+id/login_button3"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/_3hover"
                    android:onClick="onNumButtonClick"
                    android:tag="3" />
            </TableRow>

            <TableRow
                android:id="@+id/login_tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="4">

                <Button
                    android:id="@+id/login_buttonsup"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/hover"
                    android:onClick="onSupButtonClick" />

                <Button
                    android:id="@+id/login_button0"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/_0hover"
                    android:onClick="onNumButtonClick"
                    android:tag="0" />

                <Button
                    android:id="@+id/login_buttonok"
                    android:layout_width="@dimen/main_page_number_button_length"
                    android:layout_height="@dimen/main_page_number_button_length"
                    android:background="@drawable/okhover"
                    android:onClick="onOkButtonClick" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>