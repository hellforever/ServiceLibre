<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg0"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/login_imageButton0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/bienvenue" />

                    <TextView
                        android:id="@+id/login_imageButton10"
                        android:layout_width="240dp"
                        android:layout_height="80dp" />

                    <Button
                        android:id="@+id/login_buttoncon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/configbtn"
                        android:gravity="center"
                        android:onClick="OnConfigButtonClick" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/login_imageButton2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/chinese" />

                    <ImageButton
                        android:id="@+id/login_imageButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/english" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/login_imageButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/german" />

                    <ImageButton
                        android:id="@+id/login_imageButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/french" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/login_TextView1"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/code"
                android:gravity="center"></TextView>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/login_tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp">

                    <Button
                        android:id="@+id/login_button7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/_7hover"
                        android:onClick="OnNumButtonClick"
                        android:tag="7" />

                    <Button
                        android:id="@+id/login_button8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/_8hover"
                        android:onClick="OnNumButtonClick"
                        android:tag="8" />

                    <Button
                        android:id="@+id/login_button9"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/_9hover"
                        android:onClick="OnNumButtonClick"
                        android:tag="9" />
                </TableRow>

                <TableRow
                    android:id="@+id/login_tableRow2"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <Button
                        android:id="@+id/login_button4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/_4hover"
                        android:onClick="OnNumButtonClick"
                        android:tag="4" />

                    <Button
                        android:id="@+id/login_button5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/_5hover"
                        android:onClick="OnNumButtonClick"
                        android:tag="5" />

                    <Button
                        android:id="@+id/login_button6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/_6hover"
                        android:onClick="OnNumButtonClick"
                        android:tag="6" />
                </TableRow>

                <TableRow
                    android:id="@+id/login_tableRow3"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <Button
                        android:id="@+id/login_button1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/_1hover"
                        android:onClick="OnNumButtonClick"
                        android:tag="1" />

                    <Button
                        android:id="@+id/login_button2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/_2hover"
                        android:onClick="OnNumButtonClick"
                        android:tag="2" />

                    <Button
                        android:id="@+id/login_button3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/_3hover"
                        android:onClick="OnNumButtonClick"
                        android:tag="3" />
                </TableRow>

                <TableRow
                    android:id="@+id/login_tableRow4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="20dp"
                    android:tag="4">

                    <Button
                        android:id="@+id/login_buttonsup"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/hover"
                        android:onClick="OnSupButtonClick" />

                    <Button
                        android:id="@+id/login_button0"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/_0hover"
                        android:onClick="OnNumButtonClick"
                        android:tag="0" />

                    <Button
                        android:id="@+id/login_buttonok"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/okhover"
                        android:onClick="OnOkButtonClick" />
                </TableRow>
            </TableLayout>

            <Space
                android:id="@+id/login_space2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>