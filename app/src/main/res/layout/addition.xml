<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="bottom|left"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/addition_TextView1"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/addition_tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp" >

                    <Button
                        android:id="@+id/addition_button7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnNumButtonClick"
                        android:text="7" />

                    <Button
                        android:id="@+id/addition_button8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnNumButtonClick"
                        android:text="8" />

                    <Button
                        android:id="@+id/addition_button9"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnNumButtonClick"
                        android:text="9" />
                </TableRow>

                <TableRow
                    android:id="@+id/addition_tableRow2"
                    android:layout_width="80dp"
                    android:layout_height="80dp" >

                    <Button
                        android:id="@+id/addition_button4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnNumButtonClick"
                        android:text="4" />

                    <Button
                        android:id="@+id/addition_button5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnNumButtonClick"
                        android:text="5" />

                    <Button
                        android:id="@+id/addition_button6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnNumButtonClick"
                        android:text="6" />
                </TableRow>

                <TableRow
                    android:id="@+id/addition_tableRow3"
                    android:layout_width="80dp"
                    android:layout_height="80dp" >

                    <Button
                        android:id="@+id/addition_button1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnNumButtonClick"
                        android:text="1" />

                    <Button
                        android:id="@+id/addition_button2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnNumButtonClick"
                        android:text="2" />

                    <Button
                        android:id="@+id/addition_button3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnNumButtonClick"
                        android:text="3" />
                </TableRow>

                <TableRow
                    android:id="@+id/addition_tableRow4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="20dp" >

                    <Button
                        android:id="@+id/addition_buttonsup"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnSupButtonClick"
                        android:text="@string/back" />

                    <Button
                        android:id="@+id/addition_button0"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnNumButtonClick"
                        android:text="0" />

                    <Button
                        android:id="@+id/addition_buttonok"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnOkButtonClick"
                        android:text="@string/OK" />
                </TableRow>
            </TableLayout>

            <Space
                android:id="@+id/addition_space2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
