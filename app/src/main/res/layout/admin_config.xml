<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/config_TextView1"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/config_tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" >

                <Button
                    android:id="@+id/config_button7"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="onNumButtonClick"
                    android:text="7" />

                <Button
                    android:id="@+id/config_button8"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="onNumButtonClick"
                    android:text="8" />

                <Button
                    android:id="@+id/config_button9"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="onNumButtonClick"
                    android:text="9" />
            </TableRow>

            <TableRow
                android:id="@+id/config_tableRow2"
                android:layout_width="120dp"
                android:layout_height="120dp" >

                <Button
                    android:id="@+id/config_button4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="onNumButtonClick"
                    android:text="4" />

                <Button
                    android:id="@+id/config_button5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="onNumButtonClick"
                    android:text="5" />

                <Button
                    android:id="@+id/config_button6"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="onNumButtonClick"
                    android:text="6" />
            </TableRow>

            <TableRow
                android:id="@+id/config_tableRow3"
                android:layout_width="120dp"
                android:layout_height="120dp" >

                <Button
                    android:id="@+id/config_button1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="onNumButtonClick"
                    android:text="1" />

                <Button
                    android:id="@+id/config_button2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="onNumButtonClick"
                    android:text="2" />

                <Button
                    android:id="@+id/config_button3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="onNumButtonClick"
                    android:text="3" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/login_TextViewBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center_horizontal"
            android:text="@string/copy_right"
            android:textSize="12sp" >
        </TextView>
    </LinearLayout>

</LinearLayout>