<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/menuicon_imageView1"
        android:layout_width="122dp"
        android:layout_height="122dp"
        />

    <TextView
        android:id="@+id/menuicon_textView11"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="154dp"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/menuicon_button1"
            android:layout_width="52dp"
            android:layout_height="51dp"
            android:background="@drawable/minusbtn2" />

        <TextView
            android:id="@+id/menuicon_textView1"
            android:layout_width="45dp"
            android:layout_height="50dp"
             android:textSize="20sp"
            android:background="@drawable/platnb2"
            android:gravity="center"
            android:text="0" />

        <Button
            android:id="@+id/menuicon_button2"
            android:layout_width="52dp"
            android:layout_height="51dp"
            android:background="@drawable/plusbtn2" />
    </LinearLayout>

</LinearLayout>