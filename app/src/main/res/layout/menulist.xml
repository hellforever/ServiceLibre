<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/menulist_imageView1"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/menulist_textView1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="fill"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="TextView" />

    <Button
        android:id="@+id/menulist_button1"
        android:layout_width="76dp"
        android:layout_height="78dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/minusbtn" />

    <TextView
        android:id="@+id/menulist_textView2"
        android:layout_width="72dp"
        android:layout_height="60dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/platnb"
        android:gravity="center"
        android:textSize="20sp"
        android:text="0" />

    <Button
        android:id="@+id/menulist_button2"
        android:layout_width="76dp"
        android:layout_height="78dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/plusbtn" />

</LinearLayout>