<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/modimenu_view"
        android:layout_width="match_parent"
        android:layout_height="520dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <Button
            android:id="@+id/modimenu_buttonAdd"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onClickAddButton"
            android:text="@+string/add" />

        <Button
            android:id="@+id/modimenu_buttonChange"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onClickEditButton"
            android:text="@+string/change" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8" >

            <Button
                android:id="@+id/modimenu_buttonDownload"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:height="60dp"
                android:onClick="onClickDownloadButton"
                android:text="@+string/download" />

            <Button
                android:id="@+id/modimenu_buttonUpdate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:height="60dp"
                android:onClick="onClickUpdateButton"
                android:text="@+string/update" />
        </LinearLayout>

        <Button
            android:id="@+id/modimenu_buttonDustbin"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onClickDustbinButton"
            android:text="@+string/recycle" />

        <Button
            android:id="@+id/modimenu_buttonReturn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onRetourButtonClick"
            android:text="@+string/_return" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="300dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/modimenu_ImageView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:onClick="onClickImage" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <CheckBox
                android:id="@+id/modimenu_checkava"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@+string/on_sale" />

            <Button
                android:id="@+id/modimenu_buttonDelete"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:onClick="onClickDeleteButton"
                android:text="@+string/delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/modimenu_editText0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="@+string/variety" />

                <Button
                    android:id="@+id/modimenu_buttondrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:onClick="onClickDropButton" />
            </LinearLayout>

            <EditText
                android:id="@+id/modimenu_editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@+string/name" >
            </EditText>

            <EditText
                android:id="@+id/modimenu_editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="top|left"
                android:text="@+string/description" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="300dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="160dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/modimenu_textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@+string/limit_in_turn"
                        android:textSize="20sp" />

                    <ScrollView
                        android:id="@+id/modimenu_textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <CheckBox
                                android:id="@+id/modimenu_checkBox1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@+string/top5" />

                            <CheckBox
                                android:id="@+id/modimenu_checkBox2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@+string/new_plate" />

                            <CheckBox
                                android:id="@+id/modimenu_checkBox3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@+string/chef" />
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <EditText
                    android:id="@+id/modimenu_editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="20dp"
                    android:inputType="number"
                    android:width="60dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ScrollView
                    android:layout_width="110dp"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/modimenu_printer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/modimenu_buttonUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:height="60dp"
                        android:onClick="onClickMoveUpButton"
                        android:text="@+string/move_up"
                        android:width="90dp" />

                    <Button
                        android:id="@+id/modimenu_buttonDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:height="40dp"
                        android:onClick="onClickMoveDownButton"
                        android:text="@+string/move_down"
                        android:width="90dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/login_TextViewBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center"
            android:text="@string/copy_right"
            android:textSize="12sp" >
        </TextView>
    </LinearLayout>

</LinearLayout>